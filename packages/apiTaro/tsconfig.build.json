{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "outDir": ".",
    "skipLibCheck": true,
    "declarationDir": ".",
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "dist"
  ]
}