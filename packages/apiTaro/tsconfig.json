{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "typeRoots": [
      "./typings"
    ],
    "types": [
      "vite/client",
      "node"
    ],
  },
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}