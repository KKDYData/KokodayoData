view, ::before, ::after {
  -webkit-box-sizing: border-box
  box-sizing: border-box
  border-width: 0
  border-style: solid
  border-color: #e5e7eb
}

view {
  --tw-ring-inset: var(--tw-empty, /**/ /**/)
  --tw-ring-offset-width: 0
  --tw-ring-offset-color: #fff
  --tw-ring-color: rgba(59, 130, 246, 0.5)
  --tw-ring-offset-shadow: 0 0 #0000
  --tw-ring-shadow: 0 0 #0000
  --tw-shadow: 0 0 #0000
  font-family: 'SourceHanSansSC'
  --lh: 1rem
  --max-lines: 3
  --tc-left: 4px
}

//毛玻璃
.glass {
  background: hsla(0, 0%, 100%, 0.75)
  backdrop-filter: blur(5px)
  width: 100%
}

.main-bg {
  background-image: url('https://andata.somedata.top/dataX/assetes/bk.png')
  background-repeat: repeat
  background-size: cover
}

/*
 * css tricks
 * https://css-tricks.com/line-clampin/
 */
.truncate-overflow {
  position: relative
  overflow: hidden
  display: -webkit-box
  -webkit-line-clamp: var(--max-lines)
  -webkit-box-orient: vertical
  /*
   * for firefox ? https://bugzilla.mozilla.org/show_bug.cgi?id=WebKit-line-clamp
    max-height: calc(var(--lh) * var(--max-lines))
  
     &::before {
      position: absolute
      content: '...'
      inset-block-end: 0 
      inset-inline-end: 0 
      background: #ff
      right: var(--tc-left)
      width: 1em
    }
  
    &::after {
      content: ''
      position: absolute
      inset-inline-end: 0 //"right"
      width: 1rem
      height: 1rem
      background: white
    } 
    */
}

.clean-button {
  background: none !important
  margin: 0
  padding: 0

  &::after {
    border: none
  }
}

.no-mode-fade-enter-active, .no-mode-fade-leave-active {
  transition: opacity 3s ease-in-out
  transform: translateX(0px)
}

.no-mode-fade-enter-from, .no-mode-fade-leave-to {
  transform: translateX(-20px)
  opacity: 0
}

.skeleton {
  position: relative
  overflow: hidden
  opacity: 0.5
  filter: grayscale(1)

  //background: red
  &::after {
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: linear-gradient(90deg, rgba(204, 204, 204, 0.5), rgba(222, 222, 222, 0.5), rgba(204, 204, 204, 0.5))
    animation: progress 1s ease-in-out infinite
    z-index: 20
  }
}

@keyframes progress {
  0% {
    transform: translate3d(-100%, 0, 0)
  }

  100% {
    transform: translate3d(100%, 0, 0)
  }
}

.index-wrapper {
  padding: 30px 36px
  position: relative
  height: 100vh
  overflow: scroll

  & > view + view {
    margin-top: 20px
    border-top: 1px solid black
    padding-top: 20px
  }

  & > view:last-child {
    margin-top: 40px
  }

  & > view:nth-child(2) {
    border: none
    padding-top: 0
  }
}
